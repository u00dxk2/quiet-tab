{
  "manifest_version": 3,
  "name": "Quiet Tab",
  "version": "1.0.0",
  "description": "Hide distracting unread counts from Gmail tab titles. Keep your focus, check email on your terms.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://quiet-tab.com"
}
